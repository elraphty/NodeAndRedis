<h1 style="color: black !important;">Add Users</h1>
{{#if error}} <span>{{error}}</span> {{/if}}
<form  method="post" action="/user/add">
  <div class="form-group">
    <label>ID</label>
    <input class="form-control" name="id" type="text" placeholder="Add Id" aria-label="Search">
  </div>
  <div class="form-group">
    <label>First Name</label>
    <input class="form-control" name="first_name" type="text" placeholder="Add First Name">
  </div>
   <div class="form-group">
    <label>Last Name</label>
    <input class="form-control" name="last_name" type="text" placeholder="Add Last Name">
  </div>
   <div class="form-group">
    <label>Email</label>
    <input class="form-control" name="email" type="email" placeholder="Add Email">
  </div>
   <div class="form-group">
    <label>Phone</label>
    <input class="form-control" name="phone" type="phone" placeholder="Add Phone">
  </div>
  <center><button class="btn btn-outline-success" type="submit">Add User</button></center>
</form>